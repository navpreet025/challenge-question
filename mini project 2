        "L = [\"Ram\", 1, \"Shyam\", 2, \"Aman\", 3]\n",
        "print(\"Original list:\", L)\n",
        "\n",
        "# Sort with type priority (strings first, then numbers)\n",
        "L.sort(key=lambda x: (isinstance(x, int), str(x)))\n",
        "print(\"Sorted list:\", L)"
